<header class="header">
    <nav class="navbar">
        <div class="container">
            <div class="navbar-brand">
                <a href="/" class="logo">
                    <i class="fas fa-graduation-cap"></i>
                    <span>HKMU CourseHub</span>
                </a>
            </div>

            <div class="navbar-menu">
                <a href="/" class="nav-link">Home</a>
                <a href="/courses" class="nav-link">Browse Courses</a>

                <% if (isAuthenticated) { %>
                    <a href="/reviews/create" class="nav-link">Write Review</a>
                    <a href="/materials/upload" class="nav-link">Upload Material</a>

                    <% if (user.isAdmin) { %>
                        <a href="/courses/create" class="nav-link admin-link">
                            <i class="fas fa-shield-alt"></i> Add Course
                        </a>
                    <% } %>

                    <div class="user-menu">
                        <img src="<%= user.photo %>" alt="<%= user.name %>" class="user-avatar">
                        <span class="user-name"><%= user.name %></span>
                        <div class="dropdown">
                            <a href="/auth/logout" class="dropdown-item">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <a href="/auth/login" class="btn btn-primary">Login</a>
                <% } %>
            </div>
        </div>
    </nav>
</header>
