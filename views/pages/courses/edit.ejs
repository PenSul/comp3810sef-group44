<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <%- include('../../layouts/partials/header') %>
    <%- include('../../layouts/partials/flash') %>

    <main class="form-page">
        <div class="container">
            <div class="form-container">
                <div class="form-header">
                    <h1><i class="fas fa-edit"></i> Edit Course</h1>
                    <p>Update course information for <%= course.courseCode %></p>
                </div>

                <form action="/courses/<%= course.courseCode %>/edit" method="POST" class="course-form">
                    <div class="form-group">
                        <label>Course Code</label>
                        <input
                            type="text"
                            value="<%= course.courseCode %>"
                            disabled
                            class="disabled-input"
                        >
                        <small>Course code cannot be changed</small>
                    </div>

                    <div class="form-group">
                        <label for="courseName">Course Name <span class="required">*</span></label>
                        <input
                            type="text"
                            id="courseName"
                            name="courseName"
                            value="<%= course.courseName %>"
                            required
                            maxlength="200"
                        >
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="program">Program <span class="required">*</span></label>
                            <select id="program" name="program" required>
                                <% programs.forEach(function(program) { %>
                                    <option value="<%= program %>" <%= course.program === program ? 'selected' : '' %>>
                                        <%= program %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="credits">Credits <span class="required">*</span></label>
                            <input
                                type="number"
                                id="credits"
                                name="credits"
                                value="<%= course.credits %>"
                                min="1"
                                max="10"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="description">Course Description <span class="required">*</span></label>
                        <textarea
                            id="description"
                            name="description"
                            rows="5"
                            required
                            minlength="50"
                            maxlength="2000"
                        ><%= course.description %></textarea>
                    </div>

                    <div class="form-group">
                        <label for="prerequisites">Prerequisites</label>
                        <input
                            type="text"
                            id="prerequisites"
                            name="prerequisites"
                            value="<%= course.prerequisites.join(', ') %>"
                        >
                        <small>Separate multiple prerequisites with commas</small>
                    </div>

                    <div class="form-group">
                        <label for="instructors">Instructors</label>
                        <input
                            type="text"
                            id="instructors"
                            name="instructors"
                            value="<%= course.instructors.join(', ') %>"
                        >
                        <small>Separate multiple instructors with commas</small>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Course
                        </button>
                        <a href="/courses/<%= course.courseCode %>" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <%- include('../../layouts/partials/footer') %>
    <script src="/js/main.js"></script>
</body>
</html>
