<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <%- include('../../layouts/partials/header') %>
    <%- include('../../layouts/partials/flash') %>

    <main class="form-page">
        <div class="container">
            <div class="form-container">
                <div class="form-header">
                    <h1><i class="fas fa-plus-circle"></i> Add New Course</h1>
                    <p>Add a new course to the CourseHub database</p>
                </div>

                <form action="/courses/create" method="POST" class="course-form">
                    <div class="form-group">
                        <label for="courseCode">Course Code <span class="required">*</span></label>
                        <input
                            type="text"
                            id="courseCode"
                            name="courseCode"
                            placeholder="e.g., COMP3810"
                            required
                            pattern="[A-Z]{4,8}\d{4}"
                            title="Course code should be 4-8 uppercase letters followed by 4 digits"
                        >
                        <small>Format: 4-8 uppercase letters + 4 digits (e.g., COMP3810)</small>
                    </div>

                    <div class="form-group">
                        <label for="courseName">Course Name <span class="required">*</span></label>
                        <input
                            type="text"
                            id="courseName"
                            name="courseName"
                            placeholder="e.g., Software Engineering Fundamentals"
                            required
                            maxlength="200"
                        >
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="program">Program <span class="required">*</span></label>
                            <select id="program" name="program" required>
                                <option value="">Select Program</option>
                                <% programs.forEach(function(program) { %>
                                    <option value="<%= program %>"><%= program %></option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="credits">Credits <span class="required">*</span></label>
                            <input
                                type="number"
                                id="credits"
                                name="credits"
                                min="1"
                                max="10"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="description">Course Description <span class="required">*</span></label>
                        <textarea
                            id="description"
                            name="description"
                            rows="5"
                            placeholder="Provide a detailed description of the course..."
                            required
                            minlength="50"
                            maxlength="2000"
                        ></textarea>
                        <small>Minimum 50 characters, maximum 2000 characters</small>
                    </div>

                    <div class="form-group">
                        <label for="prerequisites">Prerequisites</label>
                        <input
                            type="text"
                            id="prerequisites"
                            name="prerequisites"
                            placeholder="e.g., COMP1001, COMP2001"
                        >
                        <small>Separate multiple prerequisites with commas</small>
                    </div>

                    <div class="form-group">
                        <label for="instructors">Instructors</label>
                        <input
                            type="text"
                            id="instructors"
                            name="instructors"
                            placeholder="e.g., Dr. John Smith, Prof. Jane Doe"
                        >
                        <small>Separate multiple instructors with commas</small>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Course
                        </button>
                        <a href="/courses" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <%- include('../../layouts/partials/footer') %>
    <script src="/js/main.js"></script>
</body>
</html>
